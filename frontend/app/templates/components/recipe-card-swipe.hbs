{{#unless showIngredients}}
	{{#each activeRecipe.images as |url index|}}
		<img src="{{url.imageMain}}" class="{{b}}__image {{if (eq index imageIndex) "m-image_active"}}">
	{{/each}}
	<h2 class="{{b}}__name">{{activeRecipe.name}}</h2>
{{else}}
	{{activeRecipe.name}}
	<p>Cook Time: {{activeRecipe.cookTime}}</p>
	<p>Servings: {{activeRecipe.servings}}</p>

	{{#each activeRecipe.ingredients as |ingredient|}}
		<p>{{ingredient.name}}</p>
	{{/each}}
{{/unless}}